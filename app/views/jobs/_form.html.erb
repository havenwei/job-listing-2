<%= simple_form_for [:admin,@job] do |f| %>

<%= f.input :title %>
<%= f.input :category, :collection => ["developer","healthcare", "customer-service", "sales-marketing", "legal", "non-profit", "human-resource", "design"], :selected => "developer" %>
<%= f.input :company %>
<%= f.input :city %>
<%= f.input :description %>
<%= f.input :wage_lower_bound, label: "Lower Salary" %>
<%= f.input :wage_upper_bound, label: "Upper Salary" %>
<%= f.input :contact_email %>
<%= f.input :is_hidden %>

  <%= f.submit "Submit", class: "btn btn-default"%>
<% end %>
