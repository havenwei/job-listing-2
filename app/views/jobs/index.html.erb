<div class="col-md-12">
  <div class="auth">
    <% if current_user && current_user.admin? %>
      <h1 class="text-center">Welcom to WORK.LIFE <span>Review published jobs</span> </h1>
    <% else %>
    <h1 class="text-center">Welcom to WORK.LIFE <span>Seek a good job!</span> </h1>
    <% end %>
    <form>

      <div class="dropdown clearfix pull-right">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Filter
              <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
              <li>
                <%= link_to("Lower Salary", jobs_path(:order => "by_lower_bound")) %>
              </li>
              <li>
                <%= link_to("Upper Salary", jobs_path(:order => "by_upper_bound")) %>
              </li>
              <li>
                <%= link_to("Publish Time", jobs_path ) %>
              </li>
          </ul>
      </div>
      <br><br>

      <%= render :partial => "job_item", :collection => @jobs, :as => :job %>

    </form>
  </div>
</div>
