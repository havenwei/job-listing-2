<div class="col-md-10  col-md-offset-1">
  <div class="auth">
    <h1 class="text-center"><%= @job.title %><span>by company, Inc.</span> </h1>
    <div id="big-form" class="well auth-box">
      <form>
        <fieldset>

          <h3>Job Descriptioin:</h3>

          <p>
            <%= simple_format(@job.description) %>
          </p>

          <hr>
          <div class="text-center">
            <%= link_to("Apply", new_job_resume_path(@job), class: "btn btn-default") %>
          </div>

        </fieldset>
      </form>
    </div>
  </div>
</div>
