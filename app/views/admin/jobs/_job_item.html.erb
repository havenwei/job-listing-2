<div id="big-form" class="well auth-box">

  <div class="row">
      <div class="col-md-12 col-lg-10 col-lg-offset-1">
        <div class="pull-right">
          <%= link_to edit_admin_job_path(job), class: "btn btn-xs btn-info" do %><i class="fa fa-pencil"></i><% end %>
          <%= link_to admin_job_path(job), :method => :delete, :class => "btn btn-xs  btn-danger", :data => { :confirm => "Are you sure?" } do %><i class="fa fa-trash-o"></i><% end %>
          <% if job.is_hidden %>
            <%= link_to publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-success" do %><i class="fa fa-eye"></i><% end %>
          <% else %>
            <%= link_to hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-warning" do %><i class="fa fa-eye-slash"></i><% end %>
          <% end %>
          <a href="<%= admin_job_resumes_path(job) %>"><i class="fa fa-paper-plane" aria-hidden="true"></i></a> <span class="badge"><%= job.resumes.count %></span></label>
        </div>

        <p>
          <%= render_job_status(job) %>
          <%= link_to(job.title, admin_job_path(job)) %>
        </p>
        <div class="row">
          <div class="col-md-6">
            <span><i class="fa fa-credit-card" aria-hidden="true"></i> <%= job.wage_lower_bound %> ~ <%= job.wage_upper_bound %> </span>
          </div>
          <div class="col-md-6">
            <span><i class="fa fa-briefcase" aria-hidden="true"></i> <%= job.category %></span>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3 col-sm-6">
            <span><i class="fa fa-building" aria-hidden="true"></i> <%= job.company %></span>
          </div>
          <div class="col-md-3 col-sm-6">
            <span><i class="fa fa-map-marker" aria-hidden="true"></i> job.city</span>
          </div>
          <div class="col-md-3 col-sm-6">
            <span><i class="fa fa-clock-o" aria-hidden="true"></i> <%= time_ago_in_words(job.created_at) %></span>
          </div>
          <div class="col-md-3 col-sm-6">
            <span><i class="fa fa-envelope" aria-hidden="true"></i> <%= job.user.email %></span>
          </div>
        </div>
      </div>
    </div>
</div>
